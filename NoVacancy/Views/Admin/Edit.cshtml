@{
    ViewData["Title"] = "Editar Producto";
    Layout = "_Layout";
}

<!-- Formulario -->
<div class="form-section">
    <h4 class="mb-4">Editar producto</h4>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label fw-bold">Título</label>
            <input type="text" class="form-control" name="Titulo" value="Camiseta Oversize">
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Descripción</label>
            <textarea class="form-control" name="Descripcion" rows="4">Camiseta de algodón 100% color negro con corte amplio.</textarea>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Multimedia</label><br>
            <label for="fileUpload" class="btn btn-upload">
                Subir nuevo
            </label>
            <input type="file" id="fileUpload" name="Imagen" class="d-none" accept="image/*" onchange="previewImage(event)">
            <div class="mt-2">
                <img id="preview" src="~/images/productos/camiseta-oversize.jpg" alt="Vista previa" style="max-width: 100%;">
            </div>
        </div>

        <!-- Resto del formulario (categoría, variables, etc.) -->
        <button type="submit" class="btn btn-dark w-100">Guardar cambios</button>
    </form>
</div>

@section Scripts {
    <script>
        function previewImage(event) {
            const input = event.target;
            const preview = document.getElementById("preview");

            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.display = "block";
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
