<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NoVacancy</title>
    <script type="importmap"></script>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-light bg-white border-bottom px-4">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <a class="nav-link" href="#" title="Buscar">
                    <i class="bi bi-search fs-4"></i>
                </a>

                <span class="navbar-brand mx-auto fw-bold">No Vacancy</span>

                <div class="d-flex align-items-center">
                    <a class="nav-link me-3"
                       href="@Url.Action("Register", "Home")"
                       title="Perfil de usuario">
                        <i class="bi bi-person fs-4"></i>
                    </a>
                    <a class="nav-link"
                       href="@Url.Action("Shopping_cart", "Home")"
                       title="Carrito de compras">
                        <i class="bi bi-cart fs-4"></i>
                    </a>
                </div>
            </div>
        </nav>
        <div style="border-bottom: 2px solid black"></div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">
            <!-- Redes sociales a la izquierda -->
            <div class="mb-3 mb-md-0 d-flex align-items-center">
                <span class="me-3">Redes sociales</span>
                <i class="bi bi-facebook me-2"></i>
                <i class="bi bi-instagram me-2"></i>
                <i class="bi bi-youtube"></i>
            </div>

            <!-- Enlaces a la derecha -->
            <div class="footer-links d-flex bg-white border-top py-4">
                <a href="@Url.Action("Privacy", "Home")" class="text-decoration-none text-dark me-3">Política de privacidad</a>
                <a href="#" class="text-decoration-none text-dark me-3">Contáctanos</a>
                <a href="#" class="text-decoration-none text-dark">Acerca de</a>
            </div>
        </div>
        <div class="container">
            &copy; 2025 - NoVacancy - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
