<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NoVacancy</title>
    <script type="importmap"></script>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-light bg-white border-bottom px-4">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <a class="nav-link" href="#" title="Buscar">
                    <i class="bi bi-search fs-4"></i>
                </a>

                <a class="navbar-brand mx-auto fw-bold" href="@Url.Action("Index", "Home")" style="text-decoration:none;color:inherit;cursor:pointer;">No Vacancy</a>

                <div class="d-flex align-items-center">
                    <div class="dropdown">
                        <a class="nav-link me-3 dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" title="Perfil de usuario">
                            <i class="bi bi-person fs-4"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            @if (User.Identity != null && User.Identity.IsAuthenticated)
                            {
                                <li>
                                    <form asp-controller="Usuario" asp-action="Logout" method="post" class="dropdown-item p-0">
                                        <button type="submit" class="btn btn-link dropdown-item">Cerrar sesión</button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li><a class="dropdown-item" href="@Url.Action("Login", "Usuario")">Iniciar sesión</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Register", "Usuario")">Registrarse</a></li>
                            }
                        </ul>
                    </div>
                    <a class="nav-link"
                       href="@Url.Action("Shopping_cart", "CarritoLinea")"
                       title="Carrito de compras">
                        <i class="bi bi-cart fs-4"></i>
                    </a>
                    <!-- INICIO OPCIÓN TEMPORAL AGREGAR PRODUCTO -->
                    @* Solo visible para usuarios autenticados *@
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link ms-3 btn btn-outline-dark px-3 py-1" href="@Url.Action("Create", "Producto")">
                            <i class="bi bi-plus-circle"></i> Agregar producto
                        </a>
                    }
                    <!-- FIN OPCIÓN TEMPORAL AGREGAR PRODUCTO -->
                </div>
            </div>
        </nav>
        <div style="border-bottom: 2px solid black"></div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">
            <!-- Redes sociales a la izquierda -->
            <div class="mb-3 mb-md-0 d-flex align-items-center">
                <span class="me-3">Redes sociales</span>
                <i class="bi bi-facebook me-2"></i>
                <i class="bi bi-instagram me-2"></i>
                <i class="bi bi-youtube"></i>
            </div>

            <!-- Enlaces a la derecha -->
            <div class="footer-links d-flex bg-white border-top py-4">
                <a href="@Url.Action("Privacy", "Home")" class="text-decoration-none text-dark me-3">Política de privacidad</a>
                <a href="#" class="text-decoration-none text-dark me-3">Contáctanos</a>
                <a href="#" class="text-decoration-none text-dark">Acerca de</a>
            </div>
        </div>
        <div class="container">
            &copy; 2025 - NoVacancy - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
