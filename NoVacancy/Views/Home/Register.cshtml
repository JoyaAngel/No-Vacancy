@{
	ViewData["Title"] = "Register";
}
<!-- Tabs -->
  <nav class="nav nav-pills justify-content-center my-4">
    <a class="nav-link active" aria-current="page" href="@Url.Action("Register", "Home")">Registrarse</a>
    <a class="nav-link" href="@Url.Action("Login", "Home")">Iniciar sesión</a>
  </nav>

  <!-- Formulario -->
  <div class="container my-5 form-container">
    <h4 class="fw-bold">Crear una cuenta</h4>
    <p>¿Ya tienes una cuenta? <a href="#">Inicia sesión</a></p>

    <form>
      <div class="mb-3">
        <label class="form-label">Nombre(s)</label>
        <input type="text" class="form-control">
      </div>
      <div class="row">
        <div class="mb-3 col-md-6">
          <label class="form-label">Primer apellido</label>
          <input type="text" class="form-control">
        </div>
        <div class="mb-3 col-md-6">
          <label class="form-label">Segundo apellido</label>
          <input type="text" class="form-control">
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label">Correo electrónico</label>
        <input type="email" class="form-control">
      </div>
      <div class="mb-3">
        <label class="form-label">Nombre de usuario</label>
        <input type="text" class="form-control">
      </div>
      <div class="mb-4">
        <label class="form-label">Contraseña</label>
        <input type="password" class="form-control">
      </div>
      <button type="submit" class="btn btn-dark w-100">Enviar</button>
    </form>
  </div>