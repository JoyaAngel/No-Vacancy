@{
	ViewData["Title"] = "Login";
}

 <!-- Tabs -->
  <nav class="nav nav-pills justify-content-center my-4">
    <a class="nav-link" aria-current="page" href="@Url.Action("Register", "Home")">Registrarse</a>
    <a class="nav-link active" href="#">Iniciar sesión</a>
  </nav>

  <!-- Formulario -->
  <div class="container my-5 form-container">
    <h4 class="fw-bold">Iniciar sesión</h4>
    <p>¿No tienes una cuenta? <a href="#">Registrate</a></p>

    <form>
      <div class="mb-3">
        <label class="form-label">Nombre de usuario</label>
        <input type="text" class="form-control">
      </div>
      <div class="mb-4">
        <label class="form-label">Contraseña</label>
        <input type="password" class="form-control">
      </div>
      <button type="submit" class="btn btn-dark w-100">Enviar</button>
    </form>
  </div>