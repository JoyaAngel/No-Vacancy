@{
	ViewData["Title"] = "Home Page";
}

<section>
	<div class="container mt-5">
		<h1 id="cabecera">Colecciones</h1>
		<br>
		<div class="row">

			<div class="col-md-4">
				<div class="card">
					<img src="~/images/playera_negra.png" class="card-img-top" alt="Producto 1">
					<div class="card-body">
						<h5 class="card-title">Playera Negra</h5>
						<p class="card-text">$25.00</p>
						<a href="@Url.Action("Product_detail", "Home")" class="px-3 text-muted text-decoration-none">Ver más -></a>
					</div>
				</div>
			</div>


			<div class="col-md-4">
				<div class="card">
					<img src="~/images/playera_blanca.webp" class="card-img-top" alt="Producto 1">
					<div class="card-body">
						<h5 class="card-title">Playera Blanca</h5>
						<p class="card-text">$29.00</p>
						<a href="@Url.Action("Product_detail", "Home")" class="px-3 text-muted text-decoration-none">Ver más -></a>
					</div>
				</div>
			</div>


			<div class="col-md-4">
				<div class="card">
					<img src="~/images/playera_negra.png" class="card-img-top" alt="Producto 1">
					<div class="card-body">
						<h5 class="card-title">Playera Negra 2</h5>
						<p class="card-text">$25.00</p>
						<a href="@Url.Action("Product_detail", "Home")" class="px-3 text-muted text-decoration-none">Ver más -></a>
					</div>
				</div>
			</div>

		</div>
	</div>
</section>

<div class="d-flex align-items-center my-4">
	<div class="flex-grow-1" style="border-top: 2px solid black"></div>
	<a href="@Url.Action("Store", "Home")" class="px-3 text-muted text-decoration-none">Ver todo</a>
	<div class="flex-grow-1" style="border-top: 2px solid black"></div>
</div>

<section class="carrusel mb-5">
	<div id="carouselExampleControls"
		 class="carousel slide"
		 data-bs-ride="carousel">
		<div class="carousel-inner">
			<!-- Imagen 1 -->
			<div class="carousel-item active">
				<div class="position-relative d-flex justify-content-center align-items-center"
					 style="height: 400px">
					<img src="~/images/1.webp" class="d-block w-50" alt="Imagen 1" />
					<div class="position-absolute bottom-0 end-0 text-end text-white bg-dark bg-opacity-50 p-2 rounded">
						<h5>Texto 1</h5>
					</div>
				</div>
			</div>

			<!-- Imagen 2 -->
			<div class="carousel-item">
				<div class="position-relative d-flex justify-content-center align-items-center"
					 style="height: 400px">
					<img src="~/images/2.jpg" class="d-block w-50" alt="Imagen 2" />
					<div class="position-absolute bottom-0 end-0 text-end text-white bg-dark bg-opacity-50 p-2 rounded">
						<h5>Texto 2</h5>
					</div>
				</div>
			</div>

			<!-- Imagen 3 -->
			<div class="carousel-item">
				<div class="position-relative d-flex justify-content-center align-items-center"
					 style="height: 400px">
					<img src="~/images/3.png" class="d-block w-50" alt="Imagen 3" />
					<div class="position-absolute bottom-0 end-0 text-end text-white bg-dark bg-opacity-50 p-2 rounded">
						<h5>Texto 3</h5>
					</div>
				</div>
			</div>
		</div>

		<!-- Controles -->
		<button class="carousel-control-prev"
				type="button"
				data-bs-target="#carouselExampleControls"
				data-bs-slide="prev"
				style="top: 50%; transform: translateY(-50%); height: 400px">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Anterior</span>
		</button>

		<button class="carousel-control-next"
				type="button"
				data-bs-target="#carouselExampleControls"
				data-bs-slide="next"
				style="top: 50%; transform: translateY(-50%); height: 400px">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Siguiente</span>
		</button>
	</div>
</section>