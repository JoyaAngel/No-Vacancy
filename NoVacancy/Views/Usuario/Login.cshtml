@{
	ViewData["Title"] = "Login";
}

<!-- Tabs -->
<nav class="nav nav-pills justify-content-center my-4">
	<a class="nav-link" aria-current="page" href="@Url.Action("Register", "Usuario")">Registrarse</a>
	<a class="nav-link active" href="#">Iniciar sesión</a>
</nav>

<!-- Formulario -->
<div class="container my-5 form-container">
	<h4 class="fw-bold">Iniciar sesión</h4>
	<p>¿No tienes una cuenta? <a href="@Url.Action("Register", "Usuario")">Regístrate</a></p>

	@using (Html.BeginForm("Login", "Usuario", FormMethod.Post))
	{
		@Html.AntiForgeryToken()
		<div class="mb-3">
			<label class="form-label">Correo electrónico</label>
			<input type="email" name="correo" class="form-control" required />
		</div>
		<div class="mb-4">
			<label class="form-label">Contraseña</label>
			<input type="password" name="constrasenia" class="form-control" required />
		</div>
		<button type="submit" class="btn btn-dark w-100">Enviar</button>
		@if (!string.IsNullOrEmpty(ViewBag.Error))
		{
			<div class="alert alert-danger mt-3">@ViewBag.Error</div>
		}
	}
</div>
