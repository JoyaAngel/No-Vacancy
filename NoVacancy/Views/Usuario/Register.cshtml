@model NoVacancy.ViewModels.RegistroUsuarioViewModel
@{
    ViewData["Title"] = "Registro";
}

<!-- Tabs mejorados -->
<nav class="nav nav-pills nav-justified mb-4 gap-2 register-login-tabs">
    <a class="nav-link active fw-bold" href="#">Registrarse</a>
    <a class="nav-link fw-bold" href="@Url.Action("Login", "Usuario")">Iniciar sesión</a>
</nav>

<!-- Formulario de registro -->
<div class="container my-5 form-container">
    <h4 class="fw-bold">Registro de usuario</h4>

    @using (Html.BeginForm("Register", "Usuario", FormMethod.Post, new { @ReturnUrl = Context.Request.Query["ReturnUrl"] }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "Por favor corrige los errores e inténtalo de nuevo.", new { @class = "alert alert-danger" })
        @Html.Hidden("ReturnUrl", Context.Request.Query["ReturnUrl"])
        <div class="mb-3">
            <label class="form-label">Nombre</label>
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            <label class="form-label">Correo electrónico</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", required = "required" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
        <div class="mb-4">
            <label class="form-label">Contraseña</label>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
        <div class="mb-4 d-none">
            @Html.HiddenFor(m => m.Rol, new { @Value = "Cliente" })
        </div>
        <!-- Dirección -->
        <div class="mb-3">
            <label class="form-label">Calle</label>
            @Html.TextBoxFor(m => m.Calle, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            <label class="form-label">Número</label>
            @Html.TextBoxFor(m => m.Numero, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            <label class="form-label">Colonia</label>
            @Html.TextBoxFor(m => m.Colonia, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            <label class="form-label">Ciudad</label>
            @Html.TextBoxFor(m => m.Ciudad, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            <label class="form-label">Estado</label>
            @Html.TextBoxFor(m => m.Estado, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            <label class="form-label">Código Postal</label>
            @Html.TextBoxFor(m => m.CodigoPostal, new { @class = "form-control" })
        </div>
        <div class="form-btn-center">
            <button type="submit" class="btn btn-dark w-100 py-2 fs-5 mt-3">Registrarse</button>
        </div>
    }
    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</div>
