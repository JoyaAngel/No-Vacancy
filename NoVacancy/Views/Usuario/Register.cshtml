@model NoVacancy.ViewModels.RegistroUsuarioViewModel
@{
    ViewData["Title"] = "Registro";
}

<!-- Tabs -->
<nav class="nav nav-pills justify-content-center my-4">
    <a class="nav-link active" href="#">Registrarse</a>
    <a class="nav-link" href="@Url.Action("Login", "Usuario")">Iniciar sesión</a>
</nav>

<!-- Formulario de registro -->
<div class="container my-5 form-container">
    <h4 class="fw-bold">Registro de usuario</h4>
    <p>¿Ya tienes una cuenta? <a href="@Url.Action("Login", "Usuario")">Inicia sesión</a></p>

    @using (Html.BeginForm("Register", "Usuario", FormMethod.Post, new { @ReturnUrl = Context.Request.Query["ReturnUrl"] }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("ReturnUrl", Context.Request.Query["ReturnUrl"])
        <div class="mb-3">
            <label class="form-label">Nombre</label>
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            <label class="form-label">Correo electrónico</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", required = "required" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
        <div class="mb-4">
            <label class="form-label">Contraseña</label>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
        <div class="mb-4">
            <label class="form-label">Rol</label>
            @Html.DropDownListFor(m => m.Rol, new SelectList(new[] { "Cliente" }), "Selecciona un rol", new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.Rol, "", new { @class = "text-danger" })
        </div>
        <button type="submit" class="btn btn-dark w-100">Registrarse</button>
    }
    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</div>
